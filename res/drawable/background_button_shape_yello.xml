<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。-->
        <shape>
			<solid android:color="@color/lightyellow" />
             <corners android:radius="8.0dip" />
            <padding android:left="15dp" android:top="15dp"
                android:bottom="15dp" android:right="15dp" />
        </shape>
    </item>
    <item > 
        <!-- 定义当button  处于常规 状态时的形态。-->
        <shape android:shape="rectangle"
			xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/khaki" />
			<padding android:left="7.0dip"
				android:top="7.0dip" android:right="7.0dip"
				android:bottom="7.0dip" />
			<corners android:radius="8.0dip" />
		</shape>
    </item>
</selector>



 