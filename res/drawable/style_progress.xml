				android:endColor="@color/cornflowerblue"
				android:centerColor="@color/cornflowerblue" 
				android:angle="270.0" /> 
		</shape> 
		</clip> </item> 
		<item 
 			android:id="@android:id/secondaryProgress"> 
 			<clip> <shape> 
 			    <corners
					android:radius="8.0dip" /> 
