<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg21"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@drawable/top" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="激活金牌家教"
            android:textColor="@android:color/white"
            android:textSize="30dip" />
    </RelativeLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:shrinkColumns="10"
        android:stretchColumns="0"
        android:gravity="center" 
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="220dp">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/userpawd_selector" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/web_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="14dip"
                    android:text=" 口   令 :"
                    android:textColor="#5A5A5A"
                    android:textSize="24dip" />
                <EditText
                    android:id="@+id/edittext_product_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/web_text"
                    android:paddingBottom="8dip" 
                    android:password="true" 
                    android:focusable="true"  
                    android:singleLine="true"
                    android:textColor="#5A5A5A"
                    android:textSize="24dip" 
                    android:layout_marginBottom="2dp"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip" 
        android:gravity="center">
        <Button
            android:id="@+id/button_activate"
            android:layout_width="120dip"
            android:layout_height="60dip" 
            android:background="@drawable/button1"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="激    活"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="25dip" />
          <Button
            android:id="@+id/button_regist_user"
            android:layout_width="120dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="180dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:text="注册用户"
            android:textColor="@android:color/white"
            android:textSize="25dip" />
          <Button
            android:id="@+id/button_regist"
            android:layout_width="120dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="340dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:text="注册平板"
            android:textColor="@android:color/white"
            android:textSize="25dip" />
    </RelativeLayout>
</LinearLayout>