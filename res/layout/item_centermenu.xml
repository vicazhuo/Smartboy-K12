<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginTop="15dip"
		android:layout_marginBottom="15dip" >
	    <com.views.GameView
	        android:id="@+id/light_centerMenu"
		    android:layout_width= "30dip"
		    android:layout_height= "30dip"
		    android:layout_marginTop= "15dip"
		    android:layout_marginBottom= "10dip" 
		    android:visibility="invisible">
		</com.views.GameView>
		<ImageView
	        android:id="@+id/icon_centerMenu"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="30dip"
		    android:layout_marginBottom="10dip">
		</ImageView>
	    <TextView
	        android:id="@+id/text_centerMenu"
		    android:layout_width="wrap_content"
		    android:textSize="20dip"
		    android:textColor="#000000"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="5dip"
		    android:layout_marginBottom="10dip" >
	    </TextView>
	    
	    
	    <LinearLayout
	    	android:id="@+id/layout_review"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"
		    android:gravity="right"
		    android:visibility="invisible"  >
	    <ImageView
	        android:id="@+id/button_important"
		    android:layout_width="100dip"
		    android:layout_height="40dip"  
		    android:layout_marginTop="6dip"
		    android:src="@drawable/button_important" />
	    <ImageView
	        android:id="@+id/button_lessimportant"
		    android:layout_width="120dip"
		    android:layout_height="40dip"  
		    android:layout_marginTop="6dip"
		    android:layout_marginLeft="10dip"
		    android:src="@drawable/button_lessimportant" />
	    <ImageView
	        android:id="@+id/button_restart"
		    android:layout_width="100dip"
		    android:layout_height="40dip"  
		    android:layout_marginTop="6dip"
		    android:layout_marginLeft="10dip"
		    android:src="@drawable/button_restart"  />
		    
		    
	    </LinearLayout>
	  </LinearLayout>
</LinearLayout>