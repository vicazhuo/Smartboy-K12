<?xml version="1.0" encoding="utf-8"?>
<com.kingPadStudy.views.EnglishPhoneticView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layout_background" > 
    <RelativeLayout
        android:id="@+id/layout_frame"
        android:layout_width="1024dip"
        android:layout_height="768dip"
        android:layout_centerVertical="true">
        
   
   <!-- <ImageView 
        android:id="@+id/logo"
        android:layout_width="68dip"
        android:layout_height="68dip" 
        android:layout_marginTop="15dip"
        android:layout_marginLeft="30dip"
        android:src="@drawable/logo" /> -->
        <LinearLayout
	        android:id="@+id/linear_text" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:layout_gravity="center_horizontal">
	        <ImageButton
	            android:id="@+id/button_laba"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
		        android:layout_gravity="center_horizontal"
	            android:layout_marginTop="220dip"
	            android:background="@drawable/horn"  />
	        <LinearLayout 
		        android:id="@+id/linear_question" 
		        android:layout_width= "wrap_content"
		        android:layout_height= "wrap_content"
		        android:layout_marginTop= "25dip"
		        android:orientation="horizontal"
		        android:gravity="center"
		        android:layout_gravity="center_horizontal" >
		        <ImageView
			        android:id="@+id/image_question" 
			        android:layout_width= "wrap_content"
			        android:layout_height= "wrap_content"  >
		        </ImageView>
	        </LinearLayout>
       </LinearLayout> 
	   <WebView
            android:id="@+id/webview"
		    android:layout_width="fill_parent"
		    android:layout_height="150dip"  
		    android:layout_marginTop="10dip">
	   </WebView>
	 <LinearLayout 
            android:id="@+id/linear_progress"
	        android:layout_width="400dip"
	        android:layout_height="50dip"
	        android:layout_gravity="center_horizontal"
           	android:layout_marginBottom="155dip" 
	        android:layout_marginLeft="365dip"   
	       	android:layout_alignParentBottom="true"
	        android:orientation="horizontal"
	        android:visibility="gone"  >
	        <ProgressBar 
	            android:id="@+id/progress_horizontal"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="200dip"
		        android:layout_height="20dip"
		        android:max="100"
		        android:progress="100"
		        android:gravity="center"
		        android:secondaryProgress="100" />
	        <TextView
	            android:id="@+id/text_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_marginLeft="10dip"
		        android:layout_marginBottom="25dip"
		        android:textSize="22sp"
		        android:textColor="@android:color/black"
	            ></TextView>
	 </LinearLayout>
	 <LinearLayout 
           android:id="@+id/linear_button_record"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginBottom="135dip"
		   android:layout_gravity="center_horizontal"
	       android:layout_alignParentBottom="true" >
			<ImageButton
	        	android:id="@+id/button_record"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"  
		        android:background="@drawable/button_record1">
	        </ImageButton>
			<ImageButton
	        	android:id="@+id/button_play_record"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
	        	android:layout_marginLeft="10dip"   
		        android:background="@drawable/button_play_record3">
	        </ImageButton> 
	         <ImageButton
	        	android:id="@+id/button_previous_question"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        	android:layout_marginLeft="10dip"  
		        android:background="@drawable/button_previous_question">
	        </ImageButton>
	        <ImageButton
	        	android:id="@+id/button_next_question"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        	android:layout_marginLeft="10dip"  
		        android:background="@drawable/button_next_question">
	        </ImageButton>
	 </LinearLayout>
    </RelativeLayout>
    <!-- 返回按钮-->
    <com.views.GameView
        android:id="@+id/button_return"
        android:layout_width="80dip"
        android:layout_height="60dip" 
        android:layout_marginTop="10dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_default" />  
</com.kingPadStudy.views.EnglishPhoneticView>