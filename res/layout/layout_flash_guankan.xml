<?xml version="1.0" encoding="utf-8"?>
<com.kingPadStudy.views.FlashGuankanView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/layout_frame"
        android:layout_width="1024dip"
        android:layout_height="768dip"
        android:layout_centerVertical="true" >
   
   <!-- <ImageView 
        android:id="@+id/logo"
        android:layout_width="68dip"
        android:layout_height="68dip" 
        android:layout_marginTop="15dip"
        android:layout_marginLeft="30dip"
        android:src="@drawable/logo" /> -->
		<WebView
           	android:id="@+id/webview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </WebView>
        <LinearLayout
            android:id="@+id/layout_controll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="225dip"
            android:layout_gravity="center"
            android:layout_marginBottom="80dip"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal" >
            <ImageButton
                android:id="@+id/button_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_marginTop="-20dip"
                android:background="#00000000"
                android:src="@drawable/stop" />
            <ImageButton
                android:id="@+id/button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_marginTop="-20dip"
                android:background="#00000000"
                android:src="@drawable/play" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dip"
                android:layout_height="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="-20dip"
                android:indeterminate="false"
                android:max="500"
                android:progressDrawable="@drawable/seekbar_style" />

            <ImageButton
                android:id="@+id/button_switch_guankan"
                android:layout_width="50dip"
                android:layout_height="75dip"
                android:layout_marginLeft="130dip"
                android:background="@drawable/guankan1" >
            </ImageButton>

            <ImageButton
                android:id="@+id/button_switch_langdu"
                android:layout_width="50dip"
                android:layout_height="75dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/langdu2" >
            </ImageButton>
        </LinearLayout>
    </RelativeLayout>

    <!-- 底部的操作栏 -->
    <com.views.GameView
        android:id="@+id/button_return"
        android:layout_width="80dip"
        android:layout_height="60dip" 
        android:layout_marginTop="10dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_default" /> 

</com.kingPadStudy.views.FlashGuankanView>