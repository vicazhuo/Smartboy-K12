<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"
	android:layout_marginBottom="30dp"
	android:background="@android:color/transparent"
	android:shrinkColumns="0"
	android:stretchColumns="0" >

      <!-- 产品序列号 -->
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:background="@drawable/top_selector" >
	   <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="20dp">
	        
	        <TextView 
	            android:id="@+id/textview_product_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	    	    android:textSize="24dp"
	    	    android:textColor="@android:color/black"
	    	    android:text="产品序列号:"
	    	    android:gravity="center"/>
	        
	    </RelativeLayout>
	</TableRow>

	 <!-- 是否已激活 -->
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:background="@drawable/top_selector" >
	   <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="20dp">
	        
	        <!-- 是否激活 -->
	        <TextView 
	            android:id="@+id/textview_product_is_active"
	            android:layout_width="300dp"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:textSize="24dp"
	            android:singleLine="true"
	            android:gravity="center|left"
	            android:text="123456789012345"/>
	    </RelativeLayout>
	</TableRow>
	
	
	
	

<TableRow
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/bottom_selector" >   
     <!-- 系统版本-->
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:layout_marginLeft="20dp"
		    android:id="@+id/layout2">
		    
		    <TextView 
		        android:id="@+id/textview_product_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
			    android:textSize="24dp"
			    android:textColor="@android:color/black"
			    android:text="系统版本:"
			    android:gravity="center"/>
		    
		    <TextView 
		        android:id="@+id/textview_start_date"
		        android:layout_width="300dp"
		        android:layout_height="wrap_content"
		        android:textColor="@android:color/black"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="20dp"
		        android:textSize="24dp"
		        android:gravity="center|left"
		        android:singleLine="true"
		        android:text="android4.0"/>
		</RelativeLayout>
   </TableRow>
   
</TableLayout>
